
@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Content/css/Login.css" rel="stylesheet" />
    <title>Registrar Producto</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Registrar Producto</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form" action="@Url.Action("Index","ProductoPrueba")" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Nombre Producto *" name="NombreProducto" type="text" maxlength="100" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Cantidad Disponible *" name="CantidadDisponible" type="number" maxlength="50" required>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Descripción *" name="Descripcion" type="text" maxlength="100" required>
                                </div>
                                <button class="btn btn-primary" type="submit">Guardar</button>
                                <a asp-action="Consultar" asp-controller="ProductoPrueba" class="btn btn-warning" href="@Url.Action("Consultar","ProductoPrueba")">Consultar</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</body>
</html>

